@using System.Collections.Generic 
@using System.Linq @using Microsoft.AspNetCore.Http 
@using Veyesys.Web.Models.login 
@model LoginViewModel
@{ 
    ViewBag.Title = "Login"; 
    Layout = "_LayoutAdminlteBlank";
} 
<div class="login-box-body">
<form action="" id="login-validation" class="col-md-4 center-margin" method="post">
    <h3 class="text-center pad25B font-gray text-transform-upr font-size-23">Veyesys <span class="opacity-80">v1.0</span>
    </h3>
    <div id="login-form" class="content-box modal-content">
    <div class="content-box-wrapper pad20A">
        <div class="form-group"> @Html.LabelFor(m => m.Username) @Html.TextBoxFor(m => m.Username, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" }) <span class="glyphicon glyphicon-th-list form-control-feedback"></span>
        </div>
        <div class="form-group"> @Html.LabelFor(m => m.Password) @Html.PasswordFor(m => m.Password, new { @class = "form-control" }) @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }) <span class="glyphicon glyphicon-th-list form-control-feedback"></span>
        </div>
    </div>
    <div class="button-pane">
        <button type="submit" class="btn btn-block btn-primary" value="Login">Login</button>
    </div>
    </div>
     
</form>
</div>
